#include <iostream>
#include <assert.h>

using namespace std;
//practice code
int main()
{
    int*x;
    x = new int[9];
    int* y;
    y = new int[8];
    int* z;
    z = new int [7];
    int* a;
    a = new int [6];
    int* b;
    b = new int [5];
    int* c;
    c = new int [4];
    int* d;
    d = new int [3];
    int* e;
    e = new int [2];
    int* f;
    f = new int [1];
    int* g;
    g = new int [0];
    return 0;

    int size;
    int *ptr;

    cout << "size of array ->  ";
    cin >> size;
    ptr = new int[size];
    cout << "Size of array > ";
    for (int i = 0;i<size;i++)
    {
        cin >> ptr[i];
    }
    cout << "Values in the array are:";
    for (int i = 0; i<size; i++)
    {
        cout << ptr[i];
    }

return 0;
}


// professor's code
int main (void)
{
    int i;
    int *iptrarr = new int *[10];
    assert(iptrarr != NULL);

    for (i=0; i<10;++i)
    {

    iptrarr [i] = new int;
    assert(iptrarr[i] != NULL);
    }
    for (i=0;i<10;++i)
    {
        *iptrarr[i] = 9 - i;
    }
    for (i=0; i<10; ++i)
    {
        cout << *iptrarr[i]<<"  ";
    }
    cout << endl;

    for (i=0; i<10; ++i)
    {
        delete iptrarr[i];
    }
    delete[] iptrarr;
return 0;
}

